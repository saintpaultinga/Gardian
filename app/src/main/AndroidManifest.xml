<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pindelia.soft.guardian">

    <application
        android:name="com.pindelia.soft.guardian.GuardianApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Gardian">
        <activity
            android:name="com.pindelia.soft.guardian.ui.ui.login.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.pindelia.soft.guardian.ui.ui.list.ItemListActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Gardian.NoActionBar">
        </activity>
        <activity
            android:name="com.pindelia.soft.guardian.ui.ui.list.ItemDetailActivity"
            android:label="@string/title_item_detail"
            android:parentActivityName="com.pindelia.soft.guardian.ui.ui.list.ItemListActivity"
            android:theme="@style/Theme.Gardian.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.pindelia.soft.guardian.ui.ui.list.ItemListActivity" />
        </activity>
    </application>

</manifest>